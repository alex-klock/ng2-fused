{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "outDir": "dist/",
        "declaration": true,
        "sourceMap": false,
        "allowUnreachableCode": true,
        "pretty": true
    },
    "exclude": [
        "node_modules",
        "modules"
    ],
    "compileOnSave": true
}